<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:TickTest"
        xmlns:converters="using:TickTest"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="TickTest.MainWindow"
        x:DataType="vm:MainViewModel"
        Title="TickTest"
        WindowStartupLocation="CenterScreen"
        Width="800"
        Height="600"
        >
  <Window.Resources>
    <converters:ToStringConverter x:Key="ToStringConverter"/>
  </Window.Resources>

  <DockPanel>
    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="5">
      <Button IsEnabled="{Binding !IsTimerRunning}" Command="{Binding StartCommand}">Start</Button>
      <Button IsEnabled="{Binding IsTimerRunning}" Command="{Binding StopCommand}">Stop</Button>
    </StackPanel>
    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="5">
      <Button IsEnabled="{Binding IsTimerRunning}" Command="{Binding EnqueueCommand}">Enqueue</Button>
      <TextBox Margin="5,0,0,0" Text="{Binding Number, Converter={StaticResource ToStringConverter}}" IsReadOnly="True" />
    </StackPanel>
    <TextBox Margin="5" IsReadOnly="True" Text="{Binding LogText}" />
  </DockPanel>
</Window>
