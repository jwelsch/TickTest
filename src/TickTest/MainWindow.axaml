<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:TickTest"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="TickTest.MainWindow"
        x:DataType="vm:MainViewModel"
        Title="TickTest"
        >
  <DockPanel>
    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="5">
      <Button x:Name="_startButton" IsEnabled="{Binding !IsTimerRunning}" Command="{Binding StartCommand}">Start</Button>
      <Button x:Name="_stopButton" IsEnabled="{Binding IsTimerRunning}" Command="{Binding StopCommand}">Stop</Button>
    </StackPanel>
    <TextBox x:Name="_logTextBox" Margin="5" IsReadOnly="True" Text="{Binding LogText}" />
  </DockPanel>
</Window>
